{
    "buildCommand": "npm run build:web",
    "outputDirectory": "dist",
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(ttf|otf|woff|woff2)",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "font/$2"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/(privacy-policy|terms-and-conditions|refund-and-return-policy|shipping-and-delivery-policy|cancellation-and-replacement-policy|delete-account)",
            "destination": "/legal/$1"
        },
        {
            "source": "/((?!assets|_expo|favicon).*)",
            "destination": "/index.html"
        }
    ]
}